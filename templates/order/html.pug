head
  link(rel="stylesheet", href="/css/style.css", data-inline)

h2 #{date}

section
  h4 Bestelling
  table
    tbody
      each item in order
        tr
          td(class="type") #{item.type}
          td #{item.count} x
          td #{item.label}
          td(style='text-align: right') #{item.price}

      if deliveryCost
        tr
          td(colspan='3') bezorgkosten
          td
            strong #{deliveryCost}

      tr
        td(colspan='3')
          strong Totaal
        td
          strong #{price}

section
  h4 Klant
  p #{user.email}
  p #{user.phone}
  p #{user.address}
  p #{user.postalCode} #{user.city}

section
  if user.deliveryTime
    h4 Bezorgtijd
    p #{user.deliveryTime}

section
  if user.comments
    h4 Opmerkingen
    p #{user.comments}
